# LLM API Keys (use one or both)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=deepgraph2025
NEO4J_DATABASE=neo4j

# LLM Configuration
LLM_PROVIDER=openai  # or "anthropic"
LLM_MODEL=gpt-4-turbo-preview  # or "claude-sonnet-4-20250514"
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4096

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=3072
EMBEDDING_BATCH_SIZE=100

# arXiv Configuration
ARXIV_MAX_RESULTS=100000
ARXIV_CATEGORIES=cs.AI,cs.LG,cs.CL,cs.CV,cs.NE
ARXIV_DATE_FROM=2020-01-01
ARXIV_DATE_TO=2025-01-31

# Graph Construction
MAX_ENTITIES_PER_PAPER=50
ENTITY_EXTRACTION_MODEL=gpt-4-turbo-preview
RELATION_EXTRACTION_MODEL=gpt-4-turbo-preview
MIN_CONFIDENCE_SCORE=0.7

# Retrieval Configuration
VECTOR_TOP_K=10
GRAPH_MAX_HOPS=10
HYBRID_RERANK_TOP_K=5
RETRIEVAL_STRATEGY=hybrid  # vector, graph, or hybrid

# Agent Configuration
MAX_QUERY_ITERATIONS=3
ENABLE_VERIFICATION=true
ENABLE_EXPLANATION=true
AGENT_VERBOSE=false

# Evaluation
EVAL_DATASET_PATH=./benchmarks/datasets/
EVAL_OUTPUT_PATH=./benchmarks/results/
EVAL_BATCH_SIZE=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/deepgraph_rag.log

# Performance
NUM_WORKERS=4
CACHE_ENABLED=true
CACHE_DIR=./cache/

# API Server (if running as service)
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
